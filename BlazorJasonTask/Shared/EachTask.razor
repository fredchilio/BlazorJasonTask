<td><button @onclick="@(()=> ToRemoveTask.InvokeAsync(item))"><i class="oi oi-trash"></i></button></td>
<td>@item.DateCriateded</td>
<td>@item.Description</td>
<td><input type="checkbox" @bind="item.Concluded" />@item.Concluded</td>

@code {
    [Parameter] public Tasks item { get; set; }
    // Giving a event like parameter
    [Parameter] public EventCallback<Tasks> ToRemoveTask { get; set; }
}
